        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name="gr.aueb.softeng.view.Chef.HomePage.ChefHomePageActivity"
            android:label="@string/Homepage"
            android:exported="false" />
        <activity
            android:name="gr.aueb.softeng.view.Owner.HomePage.OwnerHomePageActivity"
            android:label="@string/Homepage"
